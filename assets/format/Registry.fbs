include "types.fbs";

namespace mondradiko.assets;

struct AssetEntry {
  id:AssetId;
  size:uint32;
}

table LumpEntry {
  checksum:LumpHash;
  hash_method:LumpHashMethod;
  compression_method:LumpCompressionMethod;
  assets:[AssetEntry];
}

table Registry {
  version:uint32;
  lumps:[LumpEntry];
}

root_type Registry;
