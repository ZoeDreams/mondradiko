include "types.fbs";

namespace mondradiko.protocol;

table Announcement {
  message:string;
}

table AssignClientId {
  new_id:ClientId;
}

enum ServerEventType : ushort {
  NoMessage = 0,
  Announcement,
  AssignClientId
}

table ServerEvent {
  type:ServerEventType;

  announcement:Announcement;
  assign_client_id:AssignClientId;
}

root_type ServerEvent;
